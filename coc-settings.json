{
	"coc.preferences.extensionUpdateCheck": "never",
	"coc.preferences.formatOnType": true,
	"diagnostic.autoRefresh": true,
	"coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "java", "scala", "python"],
	"suggest.noselect": true,
	"suggest.engablePreselect": false,
	"codeLens.enable": true,
	"java": {
		"referencesCodeLens.enabled": true,
		"jdt.ls.vmargs": "-javaagent:/usr/local/share/lombok/lombok.jar"
	},
	"python": {
		"referencesCodeLens.enabled": true,
		"linting.enabled": true,
		"linting.pylintEnabled": true
	},
	"metals": {
		"statusBarEnabled": true,
		"showImplicitArguments": true,
		"showImplicitConversionsAndClasses": true,
		"enableIndentOnPaste": true,
		"superMethodLensesEnabled": true,
		"showInferredType": true
	},
	"explorer": {
		"icon.source": "vim-devicons",
		"width": 30,
		"file.showHiddenFiles": true,
		"previewAction.onHover": true,
		"icon.source": "builtin",
		"autoExpandOptions": ["compact", "uncompact"],
		"icon.enableNerdfont": true,
		"file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
		"buffer.root.template": "[icon & 1] OPEN EDITORS",
		"file.root.template": "[icon & 1] PROJECT ([root])"
	},
	"clangd.semanticHighlighting": true,
  "coc.preferences.semanticTokensHighlights": false
}
